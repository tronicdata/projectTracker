extends layout

block content
    h1= title
    p Welcome to our test
    a(href="http://localhost:3000/projectlist") project list
    // Wrapper
    #wrapper

        // USER INFO
        #userInfo
            h2 User Info
            p
                strong Name:
                |  <span id='userInfoName'></span>
                br
                strong Age:
                |  <span id='userInfoAge'></span>
                br
                strong Gender:
                |  <span id='userInfoGender'></span>
                br
                strong Location:
                |  <span id='userInfoLocation'></span>
        // /USER INFO

        // USER LIST
        h2 User List
        #userList
            table
                thead
                    th UserName
                    th Email
                    th Delete?
                    th Edit?
                tbody
        // /USER LIST
        // ADD USER
        h2 Add User
        #addUser
            fieldset
                input#inputUserName(type='text', placeholder='Username')
                input#inputUserEmail(type='text', placeholder='Email')
                br
                input#inputUserFullname(type='text', placeholder='Full Name')
                input#inputUserAge(type='text', placeholder='Age')
                br
                input#inputUserLocation(type='text', placeholder='Location')
                input#inputUserGender(type='text', placeholder='gender')
                br
                button#btnAddUser Add User
        // /ADD USER
        // Update USER
        h2 Update User
        #updateUser
            fieldset
                input#editinputUserName(type='text', placeholder='Username')
                input#editinputUserEmail(type='text', placeholder='Email')
                br
                input#editinputUserFullname(type='text', placeholder='Full Name')
                input#editinputUserAge(type='text', placeholder='Age')
                br
                input#editinputUserLocation(type='text', placeholder='Location')
                input#editinputUserGender(type='text', placeholder='gender')
                br
                button#btnUpdateUser Update User
        // /Update USER

    // /WRAPPER
