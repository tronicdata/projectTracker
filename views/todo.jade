extends layout

block content
    a(href="http://localhost:3000/projectlist") See All Projects
    h1= title

     // Wrapper
    #wrapper
        ul.todoList
         li
        form(method='post', action='/todo/create')
            .input-group
                input.form-control(type='text', placeholder='What do you have to do?', name='taskTitle')
               label difficulty
                select(label='difficulty', name='difficulty')
                    option(value="1") 1
                    option(value="2") 2
                    option(value="3") 3
                label priority
                select(label='priority', name='priority')
                    option(value="1") 1
                    option(value="2") 2
                    option(value="3") 3
                
                select.form-control(name='context')
                    option(value="home") home
                    option(value="work") work
                    option(value="errand") errand
            
                span.input-group-btn
                    input.btn.btn-success(type='submit', value='Add Todo')

        // Todo LIST
        h3 List
        #todoList
            table.table
                thead
                    th Task Name
                    th Project Id
                    th State
                tbody